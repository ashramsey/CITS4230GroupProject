<div class="errwrap">
	
<h2>Sign in</h2>
	<div class="errbox">
		<% flash.each do |key, value| %>
            <div class="flash <%= key %>"><%= value %></div>
    <% end %>
	</div>
<div class="errform">
  
	<% form_for(:session, :url => sessions_path) do |f| %>
  	<div class="field">
   		<%= f.label :email %><br />
    	<%= f.text_field :email %>
  	</div> <br />
  	<div class="field">
    	<%= f.label :password %><br />
    	<%= f.password_field :password %>
  	</div>
  	<div class="actions">
    	<%= f.submit "Sign in" %>
  	</div>
	<% end %>
	<p id="errform_p">New user? <%= link_to "Sign up now!", signup_path %></p>
</div>

</div>