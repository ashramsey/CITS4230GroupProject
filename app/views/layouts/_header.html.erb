<!-- Logo + Search + Navigation -->
      <header id="top" class="body">
        <span class="cl">&nbsp;</span>
        <figure>
        <%= link_to logo, root_path, :id => 'logo' -%>
        </figure>
        <!-- Login Signup and Search Navigation -->
        <div id="topnav_container">
            <ul id="topnav" class="topnav">
                
                <% if signed_in? %>
                    <li><%= link_to "<span>Profile</span>", current_user, :class => 'topnav_links' %></li>
                    <li><%= link_to "<span>Chatrooms</span>", chatrooms_path, :class => 'topnav_links' %></li>
                    <li><%= link_to "Sign out", signout_path, :class => 'topnav_links', :method => :delete %></li>
                <% else %>
                    <li><%= link_to "<span>Sign Up</span>", signup_path, :class => 'topnav_links' -%></li>
                    <li><a href="#" class="topnav_links signin"><span>Sign In</span></a></li>
                <% end %>
                <li class="last">
                    <form onsubmit="getsearch()" method="get" id="searchIndex" class="topnav" action="">
                        <div>
                            <input type="submit" class="button button-Index" value="Search" />
                        </div>
                        <div class="field-holder-Index">
                            <input tabindex="3040" type="text" class="field-Index field" id="searchtxt" value="Search" title="Search" />
                        </div>

                        <div class="cl">&nbsp;</div>
                    </form>
                </li>
            </ul>
            <fieldset id="signin_menu" class="topnav">
                <% form_for(:session, :html => {:id=>'signin'}, :url => sessions_path) do |f| %>
                    <div class="field">
                        <%= f.label :email %>
                        <%= f.text_field :email, :tabindex=>'1000' %>
                    </div>
                    <div class="field">
                        <%= f.label :password %>
                        <%= f.password_field :password, :tabindex=>'1010' %>
                    </div>
                    <div class="actions remember">
                        <%= f.submit "Sign in" %>
                        <input tabindex="1030" id="remember" name="remember_me" value="1" type="checkbox"/>
                        <label for="remember">Remember me</label>
                    </div>
                    <div>
                        <!--<a href="#" id="resend_password_link" class="forgot">Forgot your password?</a> <br/><br/>
                        <a id="forgot_username_link_title" href="#" class="forgot-username">Forgot your username?</a>-->
                    </div>
                <% end %>
            </fieldset>
        </div>
        <!-- END - Login Signup and Search Navigation -->
        <div class="cl">&nbsp;</div>
        <nav id="navigation">
          <ul>
            <li>
            	<% if @title == "Home" %>
            		<%= link_to "<span>Home</span>", root_path ,  :class =>"active" %>
            	<% else %>
            		<%= link_to "<span>Home</span>", root_path  %>	
            	<% end %>	
        	</li>
            
            <li>
            	<% if @title == "Sign Up" %>
            		<%= link_to "<span>Sign Up</span>", signup_path , :class => "active" %>
            	<% else %>
            		<%= link_to "<span>Sign Up</span>", signup_path %>
            	<% end %>
        	</li>
        	
            <li>
            	<% if @title == "Tour" %>
            		<%= link_to "<span>Tour</span>", tour_path, :class => "active" %>
            	<% else %>
            		<%= link_to "<span>Tour</span>", tour_path %>
            	<% end%>
        	</li>
        	
            <li>
            	<% if @title == "Support" %>
            		<%= link_to "<span>Support</span>", support_path, :class => "active" %>
            	<% else %>
            		<%= link_to "<span>Support</span>", support_path %>
            	<% end %>
        	</li>
        	
            <li>
            	<% if @title == "About Us" %>
            		<%= link_to "<span>About Us</span>", aboutus_path, :class => "active" %>
            	<% else %>
            		<%= link_to "<span>About Us</span>", aboutus_path %>
            	<% end %>
        	</li>
          </ul>
        </nav>
      </header>
      <!-- END Logo + Search + Navigation -->